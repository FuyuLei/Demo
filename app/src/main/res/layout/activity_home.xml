<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.listviewdemo.HomeActivity">

    <Button
        android:id="@+id/btn_home_go_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView"
        android:textAllCaps="false"
        android:background="@drawable/frame_bg_pink"
        android:layout_margin="16dp"
        android:padding="6dp"/>

    <Button
        android:id="@+id/btn_home_go_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecyclerView"
        android:textAllCaps="false"
        android:background="@drawable/frame_bg_orange"
        android:layout_margin="16dp"
        android:padding="6dp"/>

    <Button
        android:id="@+id/btn_home_go_sqlite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SQLite"
        android:textAllCaps="false"
        android:background="@drawable/frame_bg_pink"
        android:layout_margin="16dp"
        android:padding="6dp"/>

</LinearLayout>
