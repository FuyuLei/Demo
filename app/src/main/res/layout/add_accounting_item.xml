<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textSize="8pt"
            android:textColor="#000"
            android:text="交易日期"
            android:background="@drawable/frame_bg_pink_left"
            android:padding="5dp" />

        <EditText
            android:id="@+id/edt_add_accounting_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/frame_bg_pink_right"
            android:padding="5dp"
            android:textAlignment="textEnd"
            android:textColor="#000"
            android:textSize="8pt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textSize="8pt"
            android:textColor="#000"
            android:text="消費項目"
            android:background="@drawable/frame_bg_orange_left"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/edt_add_accounting_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textSize="8pt"
            android:textColor="#000"
            android:background="@drawable/frame_bg_orange_right"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textSize="8pt"
            android:textColor="#000"
            android:text="消費金額"
            android:background="@drawable/frame_bg_pink_left"
            android:padding="5dp" />

        <EditText
            android:id="@+id/edt_add_accounting_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textSize="8pt"
            android:inputType="number"
            android:textColor="#000"
            android:background="@drawable/frame_bg_pink_right"
            android:padding="5dp"/>

    </LinearLayout>

    <Button
        android:layout_gravity="right"
        android:id="@+id/btn_add_accounting_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新增"
        android:layout_margin="16dp"
        android:background="@drawable/btn_frame_bg"
        android:textColor="@color/colorAccent"
        android:textSize="8pt"/>

</LinearLayout>