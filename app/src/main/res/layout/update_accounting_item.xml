<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/frame_bg_pink_left"
            android:padding="5dp"
            android:text="交易日期"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="8pt" />

        <EditText
            android:id="@+id/edt_update_accounting_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/frame_bg_pink_right"
            android:padding="5dp"
            android:textAlignment="textEnd"
            android:textColor="#000"
            android:textSize="8pt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/frame_bg_orange_left"
            android:padding="5dp"
            android:text="消費項目"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="8pt" />

        <EditText
            android:id="@+id/edt_update_accounting_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/frame_bg_orange_right"
            android:padding="5dp"
            android:textAlignment="textEnd"
            android:textColor="#000"
            android:textSize="8pt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/frame_bg_pink_left"
            android:padding="5dp"
            android:text="消費金額"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="8pt" />

        <EditText
            android:id="@+id/edt_update_accounting_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/frame_bg_pink_right"
            android:inputType="number"
            android:padding="5dp"
            android:textAlignment="textEnd"
            android:textColor="#000"
            android:textSize="8pt" />

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_update_accounting_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/btn_frame_bg"
            android:text="修改"
            android:textColor="@color/colorAccent"
            android:textSize="8pt" />

        <Button
            android:id="@+id/btn_update_accounting_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/btn_frame_bg"
            android:text="刪除"
            android:textColor="@color/colorAccent"
            android:textSize="8pt" />

    </LinearLayout>


</LinearLayout>